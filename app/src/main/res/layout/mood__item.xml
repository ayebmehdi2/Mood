<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:background="@drawable/shodow"
    android:layout_height="120dp"
    android:id="@+id/layout">

    <ImageView
        android:id="@+id/emoji"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="17dp"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/ic_048_injured"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/autour_one"
        android:text="Happy"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/emoji"
        app:layout_constraintStart_toStartOf="@id/emoji"
        app:layout_constraintTop_toBottomOf="@id/emoji" />

</android.support.constraint.ConstraintLayout>